@page "/"
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Home</PageTitle>

<AuthorizeView>
    <Authorized>
        <h1 class="text-4xl">Hello @context.User.FindFirst(ClaimTypes.Name)?.Value</h1>
    </Authorized>
    <NotAuthorized>
        <SignIn />
    </NotAuthorized>
</AuthorizeView>